<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImageLoader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextAppearanceActive" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CustomTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/comfortaa_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:elevation">16dp</item>
        <item name="itemIconPadding">8dp</item>
        <item name="itemTextAppearanceActive">@style/CustomTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/CustomTextAppearanceInactive</item>
    </style>
</resources>